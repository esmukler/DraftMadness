<h2>Invite Friends to <%= @league.name %></h2>


<%= simple_form_for :league, url: league_invite_url(@league), html: { class: 'form-vertical' } do |f| %>
  <%= f.input :invite_emails, as: :text, label: 'Description', input_html: { cols: 50 },
    placeholder: "john.wooden@ucla.edu, carmelo@syracuse.edu" %>

  <span class="help-block">
    Type in up to 8 emails separated by commas.
  </span>
  </br>

  <%= f.button :submit, 'Send Invites', class: 'btn btn-primary' %>
<% end %>
